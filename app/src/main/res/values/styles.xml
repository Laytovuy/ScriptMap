<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/ic_launcher_background</item>
        <item name="colorPrimary">@color/colorNew_ScriptMap</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:windowFullscreen">true</item>
    </style>

   <style name="ScriptMapSeekBar">
       <item name="android:layout_width">match_parent</item>
       <item name="android:layout_height">match_parent</item>
       <item name="android:thumb">@drawable/direct_thumb</item>
       <item name="android:progressBackgroundTint">@android:color/transparent</item>
       <item name="android:progressTint">@android:color/transparent</item>
       <item name="android:clickable">true</item>
       <item name="android:focusable">false</item>
   </style>

   <style name="ScriptMapNumText">
       <item name="android:textSize">40sp</item>
       <item name="fontFamily">@font/font_scriptmap</item>
       <item name="android:inputType">number</item>
       <item name="android:maxLength">6</item>
       <item name="android:gravity">center</item>
       <item name="android:textCursorDrawable">?android:attr/textCursorDrawable</item>
       <item name="android:textColor">@color/colorWhite</item>
       <item name="android:textColorHint">@color/colorWhite</item>
       <item name="android:cursorVisible">true</item>
   </style>


   <style name="ScriptMapButton">
       <item name="android:layout_width">100dp</item>
       <item name="android:layout_height">50dp</item>
       <item name="android:layout_marginLeft">1dp</item>
       <item name="android:layout_marginRight">1dp</item>
       <item name="android:textSize">13sp</item>
   </style>

   <style name="ScriptMapButtonRotateMin">
       <item name="android:layout_width">35dp</item>
       <item name="android:layout_height">130dp</item>
       <item name="android:layout_marginLeft">1dp</item>
       <item name="android:layout_marginRight">1dp</item>
       <item name="android:textSize">10sp</item>
       <item name="android:lineSpacingExtra">-5dp</item>
       <item name="android:gravity">center</item>
       <item name="android:layout_marginVertical">25dp</item>
       <item name="android:letterSpacing">1</item>
       <item name="android:enabled">false</item>
       <item name="fontFamily">@font/font_scriptmap_rotate</item>
   </style>

   <style name="ScriptMapButtonRotateMax">
       <item name="android:layout_width">45dp</item>
       <item name="android:textSize">12sp</item>
       <item name="android:lineSpacingExtra">-5dp</item>
       <item name="android:letterSpacing">1</item>
       <item name="android:enabled">false</item>
       <item name="fontFamily">@font/font_scriptmap_rotate</item>
   </style>


   <style name="ScriptMapLinearLayoutHorizontal">
       <item name="android:layout_width">fill_parent</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:gravity">center</item>
       <item name="android:orientation">horizontal</item>
       <item name="android:baselineAligned">false</item>
   </style>

   <style name="ScriptMapLinearLayoutVertical">
       <item name="android:layout_height">fill_parent</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:gravity">center</item>
       <item name="android:orientation">vertical</item>
       <item name="android:baselineAligned">false</item>
   </style>
</resources>